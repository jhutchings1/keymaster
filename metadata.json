{
  "name": "keymaster",
  "version": "0.1.2",
  "package": "git.lo/dbt/keymaster",
  "description": "Secrets definition and management tool",
  "repository": "https://artifacts.lo/artifactory/dbt-tools",
  "building": {
    "targets": [
      {
        "name": "darwin/amd64",
        "cgo": true,
        "flags": {
          "CC": "o64-gcc",
          "CXX": "o64-g++"
        }
      },
      {
        "name": "linux/amd64"
      }
    ],
    "extras": [
      {
        "template": "templates/description.tmpl",
        "filename": "description.txt",
        "executable": false
      }
    ]
  },
  "signing": {
    "program": "gpg",
    "email": "you@yourmail.com"

  },
  "publishing": {
    "targets": [
      {
        "src": "description.txt",
        "dst": "{{.Repository}}/{{.Name}}/{{.Version}}/description.txt",
        "sig": true,
        "checksums": false
      },
      {
        "src": "keymaster_darwin_amd64",
        "dst": "{{.Repository}}/{{.Name}}/{{.Version}}/darwin/amd64/{{.Name}}",
        "sig": true,
        "checksums": false
      },
      {
        "src": "keymaster_linux_amd64",
        "dst": "{{.Repository}}/{{.Name}}/{{.Version}}/linux/amd64/{{.Name}}",
        "sig": true,
        "checksums": false
      }
    ],
    "usernamefunc": "echo -n $username",
    "passwordfunc": "echo -n $password"
  }
}